<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id = "@+id/mainLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.court.cipherapp.MainActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background = "@drawable/main_background">

    <Button
        android:layout_marginTop="150dp"
        android:id="@+id/caesarBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:text = "Caesar Cipher"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_white_24dp"
        android:paddingLeft = "50dp"
        android:paddingRight = "50dp"
        android:background="#1FFF"
        android:textColor="@android:color/white"
        />

    <Button
        android:id="@+id/subBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:text = "Substitution Cipher"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_white_24dp"
        android:paddingLeft = "50dp"
        android:paddingRight = "50dp"
        android:background="#2FFF"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/playfairBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:text = "Playfair Cipher"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_white_24dp"
        android:paddingLeft = "50dp"
        android:paddingRight = "50dp"
        android:background="#3FFF"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/railBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:text = "Transposition Cipher"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_white_24dp"
        android:paddingLeft = "50dp"
        android:paddingRight = "50dp"
        android:background="#2FFF"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/vigenereBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:text = "Vigenere Cipher"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_white_24dp"
        android:paddingLeft = "50dp"
        android:paddingRight = "50dp"
        android:background="#1FFF"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/decodeCaesar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:text = "Decode Caesar Cipher"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_white_24dp"
        android:paddingLeft = "50dp"
        android:paddingRight = "50dp"
        android:background="#1FFF"
        android:textColor="@android:color/white"/>
</LinearLayout>
